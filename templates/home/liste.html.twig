{% extends 'base.html.twig' %}
{% block body %}
    <div class="bg-light p-3">
    <div class="row">
        <div class="col-6 col-2-offset">
        {{form_start(form) }}
            
        {{form_row(form.maxprix)}}
        </div>
        <div class="col-2">
        </div>
        {{ form_end(form) }}
    </div>
    
        <h1>Les Bijoux</h1>
    </div>

    <div class="row">
        {% for bijou in bijoux %}
            <div class="col-3 mt-4" style="height:500px" >
                <div class="border border-dark rounded p-2 clearfix">
                    <h5 >
                        {{ bijou.libelle }}
                        -
                        {{ bijou.prix }}
                        francs
                    </h5> <p></p>
                    <img class="img-fluid rounded" src="{{asset('images2/'~bijou.image)}}" alt="Image de {{bijou.libelle}}">
                    <hr>
                    <a href="#" class="btn btn-info float-right">
                        <i class="fas fa-shopping-cart mr-1"></i>
                        Ajouter
                    </a>
                </div>
          
            </div>
        {% endfor %}
    </div>
    <div class="pagination mt-4">
          {{ knp_pagination_render(bijoux) }}
          </div>
{% endblock %}
